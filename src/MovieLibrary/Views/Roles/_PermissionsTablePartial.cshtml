@model MovieLibrary.UserManagement.ViewModels.Roles.IPermissionsHolder

<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Permission</th>
        <th class="text-center" scope="col">Assigned</th>
    </tr>
    </thead>
    <tbody>
    @for (var i = 0; i < Model.Permissions.Count; ++i)
    {
        <tr>
            <td>@Model.Permissions[i].PermissionName</td>
            <td class="text-center">
                <input type="checkbox" asp-for="Permissions[i].Assigned"/>
                <input type="hidden" asp-for="Permissions[i].PermissionName"/>
            </td>
        </tr>
    }
    </tbody>
</table>
