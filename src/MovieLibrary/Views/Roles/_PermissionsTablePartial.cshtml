@model IReadOnlyList<MovieLibrary.UserManagement.ViewModels.Roles.RolePermissionViewModel>

<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Permission</th>
        <th class="text-center" scope="col">Assigned</th>
    </tr>
    </thead>
    <tbody>
    @for (var i = 0; i < Model.Count; ++i)
    {
        <tr>
            <td>@Model[i].PermissionName</td>
            <td class="text-center">
                <input type="checkbox" asp-for="@Model[i].Assigned"/>
                <input type="hidden" asp-for="@Model[i].PermissionName"/>
            </td>
        </tr>
    }
    </tbody>
</table>
