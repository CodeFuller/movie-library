@{
    ViewData["Title"] = "Manage Roles";
}

@model MovieLibrary.UserManagement.ViewModels.Roles.RolesListViewModel;

@if (Model.AddedRole)
{
    @await Html.PartialAsync("_AlertSuccessPartial", "The role was added successfully.")
}

@if (Model.UpdatedRole)
{
    @await Html.PartialAsync("_AlertSuccessPartial", "The role was updated successfully.")
}

@if (Model.DeletedRole)
{
    @await Html.PartialAsync("_AlertSuccessPartial", "The role was deleted successfully.")
}

<ul class="list-group">
    @foreach (var role in Model.Roles)
    {
        <li class="list-group-item">
            <div class="container">
                <div class="row">
                    <div class="col">
                        @role.RoleName
                    </div>
                    <div class="col-auto container">
                        <div class="row">
                            <div class="col">
                                <a class="btn-link@(role.ReadOnly ? " disabled" : String.Empty)" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
                            </div>
                            <div class="col">
                                <a class="btn-link@(role.ReadOnly ? " disabled" : String.Empty)" asp-action="ConfirmRoleDeletion" asp-route-id="@role.Id">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    }
</ul>

<a class="btn btn-primary mt-3" asp-action="CreateRole">Add Role</a>
