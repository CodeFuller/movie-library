@{
    ViewData["Title"] = "Confirm Movie Deletion";
}

@model MovieToGetViewModel

<div class="alert alert-warning" role="alert">
    Are you sure you want to delete the following movie?
</div>

<div class="single-movie-item">
    @await Html.PartialAsync("_MovieInfoPartial", Model.MovieInfo)
</div>

<form method="post" asp-action="DeleteMovie">
    <input type="hidden" id="id" name="id" value="@Model.Id.Value" />
    <button class="btn btn-primary" type="submit">Delete</button>
    <button class="btn btn-primary" type="submit" asp-action="CancelMovieDeletion">Cancel</button>
</form>
