@{
    ViewData["Title"] = "Movies to Get";
}

@using MovieLibrary.Internal
@model MoviesToGetViewModel

@if (Model.AddedMovie)
{
    <div class="alert alert-success" role="alert">
        The movie was added successfully.
    </div>
}

@if (Model.MovedMovie)
{
    <div class="alert alert-success" role="alert">
        The movie was moved successfully.
    </div>
}

@if (Model.DeletedMovie)
{
    <div class="alert alert-success" role="alert">
        The movie was deleted successfully.
    </div>
}

@if (User.IsInRole(Roles.CanAddMoviesToGet))
{
    <form method="post" asp-action="AddMovie">
        <div asp-validation-summary="All"></div>
        <div class="input-group">
            <div class="input-group-append">
                <input class="form-control" asp-for="NewMovieToGet.MovieUri" placeholder="Movie URL" aria-label="Movie URL" size="40" />
                <button class="btn btn-primary" type="submit">Add</button>
            </div>
        </div>
    </form>
}

@if (User.IsInRole(Roles.CanReadMoviesToGet))
{
    <ul class="movies-list">
        @foreach (var movie in Model.Movies)
        {
            <li id="movie-@movie.Id.Value" class="movies-list-item">
                <div class="movie-info-and-actions">
                    @await Html.PartialAsync("_MovieInfoPartial", movie.MovieInfo)
                    <div class="movie-actions">
                        @if (User.IsInRole(Roles.CanAddMoviesToSee))
                        {
                            <div>
                                <a asp-action="ConfirmMovingToSee" asp-route-id="@movie.Id.Value">To see</a>
                            </div>
                        }
                        @if (User.IsInRole(Roles.CanDeleteMoviesToGet))
                        {
                            <div>
                                <a asp-action="ConfirmMovieDeletion" asp-route-id="@movie.Id.Value">Delete</a>
                            </div>
                        }
                    </div>
                </div>
            </li>
        }
    </ul>
}
