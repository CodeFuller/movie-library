@{
    ViewData["Title"] = $"Edit User {Model.UserName}";
}

@model MovieLibrary.UserManagement.ViewModels.UserDetailsViewModel;

<form method="post" asp-action="UpdateUser">
    <table class="table table-hover table-responsive table-sm">
        <thead>
        <tr>
            <th scope="col">Permission</th>
            <th class="text-center" scope="col">Assigned</th>
        </tr>
        </thead>
        <tbody>
        @for (var i = 0; i < Model.Permissions.Count; ++i)
        {
            <tr>
                <td>@Model.Permissions[i].PermissionName</td>
                <td class="text-center">
                    <input type="checkbox" asp-for="Permissions[i].Assigned"/>
                    <input type="hidden" asp-for="Permissions[i].PermissionName"/>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <input type="hidden" asp-for="UserId"/>

    <button class="btn btn-primary" type="submit">Update</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
